@model FlightViewModel
@{
    ViewData["Title"] = "Delete Flight";
}

<h1>Delete Flight</h1>

<h3>Are you sure you want to delete the following flight?</h3>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Flight" asp-action="DeleteFlight" method="post">
    <input asp-for="FlightID" type="hidden" />
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label">Departure Airport</label>
            <select class="form-control" asp-for="DepartureAirportID"
                    asp-items="ViewBag.AllAirports" readonly>
                <option value=null>Select Airport</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Arrival Airport</label>
            <select class="form-control" asp-for="ArrivalAirportID"
                    asp-items="ViewBag.AllAirports" readonly>
                <option value=null>Select Airport</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
        <div class="form-group">
            <label class="control-label">Departure Date/Time</label>
            <input class="form-control" asp-for="DepartureDateTime" readonly />
        </div>
     </div>
        <div class="form-group col-md-6">
            <div class="form-group">
                <label class="control-label">Arrival Date/Time</label>
                <input class="form-control" asp-for="ArrivalDateTime" readonly />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label">Plane</label>
            <select class="form-control" asp-for="PlaneID" asp-items="ViewBag.AllPlanes" readonly>
                <option value=null>Select Plane</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Price</label>
            <input class="form-control" asp-for="Price" readonly />
        </div>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-danger">Edit Flight</button>
    </div>
</form>