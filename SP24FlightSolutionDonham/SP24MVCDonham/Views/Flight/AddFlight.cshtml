@model FlightViewModel
@{
    ViewData["Title"] = "AddFlight";
}

<h1>Add Flight</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Flight" asp-action="AddFlight" method="post">
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label">Departure Airport</label>
            <select class="form-control" asp-for="DepartureAirportID" 
            asp-items="ViewBag.AllAirports">
                <option value=null>Select Airport</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Arrival Airport</label>
            <select class="form-control" asp-for="ArrivalAirportID" 
                asp-items="ViewBag.AllAirports">
            <option value=null>Select Airport</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6"
            <label class="control-label">Departure Date/Time</label>
            <input class="form-control" asp-for="DepartureDateTime" />
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Arrival Date/Time</label>
            <input class="form-control" asp-for="ArrivalDateTime" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label class="control-label">Plane</label>
            <select class="form-control" asp-for="PlaneID" asp-items:"ViewBag.AllPlanes">
                <option value=null>Select Plane</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label">Price</label>
            <input class="form-control" asp-for="Price" />
        </div>
    </div>
    <br />
    <div>
        <button type="submit" class="btn btn-success">Add Flight</button>
    </div>
</form>